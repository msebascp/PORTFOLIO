---
import { Image } from "astro:assets";
const { title, subtitle, imageSrc } = Astro.props;
---

<div class="cardExperience">
    <h1 class="titleExperience">
        {title}
    </h1>
    <Image
        src={imageSrc}
        alt="ImageSantoDomingo"
        class="rounded-md max-w-16 md:max-w-24 lg:max-w-36"
    />
    <h2 class="subtitleExperience">
        {subtitle}
    </h2>
    <p class="descriptionExperience col-span-2">
        <slot />
    </p>
</div>

